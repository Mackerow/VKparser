<Page x:Class="OperatingSystemsPractices.Source.Pages.VkParser.SelectOptionsPage"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OperatingSystemsPractices.Source.Pages.VkParser"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="400"
      Title="SelectOptionsPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" FocusManager.FocusedElement="{Binding ElementName=NumberOfPostsIntegerUpDown}">
            <TextBlock Name="NumberOfPostsTextBlock" Text="Number of posts:" FontSize="16"
                       HorizontalAlignment="Center" Margin="5"></TextBlock>
            <xctk:IntegerUpDown Name="NumberOfPostsIntegerUpDown" FontSize="16" Height="30"
                                VerticalContentAlignment="Center" TextAlignment="Center" Margin="5" Text="0" AutoMoveFocus="True"></xctk:IntegerUpDown>
            <Button Name="StartButton" Content="Start" FontSize="16" Height="30"
                    Margin="5" Click="StartButton_Click" IsDefault="True"></Button>
        </StackPanel>
    </Grid>
</Page>
