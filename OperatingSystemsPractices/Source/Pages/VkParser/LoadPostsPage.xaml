<Page x:Class="OperatingSystemsPractices.Source.Pages.VkParser.LoadPostsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OperatingSystemsPractices.Source.Pages.VkParser"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="400"
      Title="LoadPostsPage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Loading posts..." HorizontalAlignment="Center"></TextBlock>
            <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Value="0" HorizontalAlignment="Center" Width="200" Height="3" Margin="0,15,0,0"/>
        </StackPanel>        
    </Grid>
</Page>
